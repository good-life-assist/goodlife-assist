            <div class="bg-gray-100 md:grid grid-cols-3 md:gap-4">
                <%= link_to "https://www.himawari-life.co.jp/", target: :_blank do %><%= image_tag "sompo.jpg", class:"mb-4 md:mb-0 w-full bg-white p-6" %><% end %>
                <%= link_to "https://www.axa-direct.co.jp/", target: :_blank do %><%= image_tag "axa.jpg", class:"mb-4 md:mb-0 w-full bg-white p-6" %><% end %>
